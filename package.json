{
  "name": "c2pa-node",
  "version": "0.9.0",
  "description": "Node.js bindings for C2PA",
  "main": "dist/index.js",
  "types": "dist/js-src/index.d.ts",
  "scripts": {
    "compile": "tsc -b && cpy index.node dist",
    "test": "jest",
    "cargo-build": "cargo build --message-format=json-render-diagnostics > cargo.log",
    "cross-build": "cross build --message-format=json-render-diagnostics > cross.log",
    "postcargo-build": "neon dist < cargo.log",
    "postcross-build": "neon dist -m /target < cross.log",
    "debug": "npm run cargo-build --",
    "build": "npm run cargo-build -- --release",
    "cross": "npm run cross-build -- --release"
  },
  "author": "Colin Murphy <colmurph@adobe.com>",
  "license": "MIT",
  "devDependencies": {
    "@neon-rs/cli": "0.1.82",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "cpy-cli": "^5.0.0",
    "fs-extra": "^11.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contentauth/c2pa-node-v2.git"
  },
  "keywords": [
    "c2pa"
  ],
  "bugs": {
    "url": "https://github.com/contentauth/c2pa-node-v2/issues"
  },
  "homepage": "https://github.com/contentauth/c2pa-node-v2#readme",
  "dependencies": {
    "debug": "^4.4.0"
  }
}
