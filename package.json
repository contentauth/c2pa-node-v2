{
  "name": "c2pa-node",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contentauth/c2pa-node-v2.git"
  },
  "version": "0.6.0",
  "description": "Node.js bindings for C2PA",
  "main": "dist/index.js",
  "types": "dist/js-src/index.d.ts",
  "files": [
    "dist/js-src",
    "dist/src",
    "dist/Cargo.toml",
    "dist/Cargo.lock"
  ],
  "engines": {
    "node": ">=18.20.2"
  },
  "scripts": {
    "build": "run-s build:rust build:ts build:docs",
    "build:docs": "typedoc --plugin typedoc-plugin-markdown --readme none --out docs js-src/index.ts",
    "build:rust": "cargo build --message-format=json-render-diagnostics > cargo.log --release",
    "build:rust-debug": "cargo build --message-format=json-render-diagnostics > cargo.log",
    "build:ts": "tsc -b && cpy index.node dist",
    "changeset:publish": "changeset publish",
    "ci": "run-s build:rust-debug build:ts test",
    "clean": "rimraf dist generated target",
    "cross": "pnpm run cross-build --release",
    "cross-build": "cross build --message-format=json-render-diagnostics > cross.log",
    "debug": "pnpm run cargo-build --",
    "lint": "cargo clippy && pnpm eslint",
    "postcargo-build": "neon dist < cargo.log",
    "postcross-build": "neon dist -m /target < cross.log",
    "release": "run-s build changeset:publish",
    "test": "jest",
    "test:watch": "jest --watch --runInBand --detectOpenHandles --forceExit"
  },
  "author": "Colin Murphy <colmurph@adobe.com>",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.0.0",
    "@neon-rs/cli": "0.1.82",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.32.0",
    "fs-extra": "^11.3.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.3",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.28.9",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "c2pa"
  ],
  "bugs": {
    "url": "https://github.com/contentauth/c2pa-node-v2/issues"
  },
  "homepage": "https://github.com/contentauth/c2pa-node-v2#readme",
  "dependencies": {
    "debug": "^4.4.0"
  },
  "packageManager": "pnpm@10.14.0"
}
