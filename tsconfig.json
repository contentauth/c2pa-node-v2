{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "rootDir": "./js-src",
    "strict": true,
    "target": "es6",
    "module": "commonjs",
    "types": ["node", "jest"],
    "paths": {
      "index.node": ["./js-src/index.node"]
    },
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "js-src/*.ts"
  ],
  "exclude": [
    "js-src/*.spec.ts"
  ]
}
